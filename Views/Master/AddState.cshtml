@{
    ViewBag.Title = "Add State";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">

    <div class="card shadow">

        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Add State</h4>
        </div>

        <div class="card-body">

            <form method="post">

                <div class="row g-3">

                    <div class="col-md-12">
                        <label class="form-label">Country *</label>
                        <select name="CountryId" asp-items="ViewBag.Country" class="form-select">
                            <option value="">Select Country</option>
                        </select>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">State Name *</label>
                        <input name="StateName" class="form-control" placeholder="Enter state name" required />
                    </div>

                </div>

                <hr />

                <div class="text-end">
                    <button class="btn btn-success px-4">Save</button>
                    <a href="/Master/StateList" class="btn btn-secondary px-4">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>
