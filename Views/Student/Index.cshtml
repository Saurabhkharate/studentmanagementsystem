@model IEnumerable<StudentInfo>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container mt-4">

    <div class="card shadow">

        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Student List</h4>

            <div>
                <a href="/Master/CountryList" class="btn btn-info btn-sm me-2">Countries</a>
                <a href="/Master/StateList" class="btn btn-warning btn-sm me-2">States</a>
                <a href="/Master/CityList" class="btn btn-secondary btn-sm me-2">Cities</a>
                <a href="/Student/Create" class="btn btn-success btn-sm">+ Add Student</a>
            </div>
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">

                    <thead class="table-dark text-center">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>DOB</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Country</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                                <td>@item.ContactNo</td>
                                <td>@item.Email</td>
                                <td>@item.Country?.CountryName</td>

                                <td class="text-center">
                                    <input type="checkbox" class="statusToggle"
                                           data-id="@item.Id"
                                           @(item.Status ? "checked" : "") />
                                </td>

                                <td class="text-center">
                                    <a href="/Student/Edit/@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <!-- PAGINATION -->
            <div class="text-center mt-3">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="/Student/Index?page=@i"
                       class="btn btn-sm @(ViewBag.CurrentPage == i ? "btn-success" : "btn-outline-primary")">
                        @i
                    </a>
                }
            </div>

        </div>
    </div>
</div>
<script>
    $(".statusToggle").change(function () {

        var checkbox = $(this);
        var id = checkbox.data("id");
        var status = checkbox.prop("checked");

        if (!confirm("Are you sure you want to change status?")) {
            checkbox.prop("checked", !status);
            return;
        }

        $.ajax({
            url: '/Student/Delete',
            type: 'POST',
            data: { id: id, status: status },
            success: function () {
                alert("Status updated successfully");
            },
            error: function () {
                alert("Error updating status");
            }
        });

    });
</script>
